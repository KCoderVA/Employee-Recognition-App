{
    // VA Healthcare Enterprise Security Configuration
    // See .vscode/restricted-operations.json for administrator-privilege restrictions
    // Copilot instructions include permanent security restrictions for system updates
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "files.autoSave": "onFocusChange",
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "workbench.startupEditor": "readme",
    "git.autofetch": true,
    "editor.wordWrap": "on",
    "editor.minimap.enabled": true,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.associations": {
        "*.yml": "yaml",
        "*.yaml": "yaml",
        "*.md": "markdown"
    },
    "json.schemaDownload.enable": true,
    "yaml.format.enable": true,
    "markdown.preview.enhanced": true,
    "files.exclude": {
        "**/.git": false,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": true,
        "**/*.zip": false,
        "**/out": true,
        "**/dist": true,
        "**/*.bak": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/archive": true
    },
    "explorer.sortOrder": "type",
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "*.md": "${basename}.html, ${basename}.pdf",
        "*.yml": "${basename}.yaml",
        "*.json": "${basename}.schema.json"
    },
    "security.workspace.trust.enabled": true,
    "extensions.ignoreRecommendations": false,
    "extensions.disabled": [
        "ms-vscode.cmake-tools",
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.cpptools-themes",
        "redhat.java",
        "ms-toolsai.datawrangler",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow",
        "ms-python.debugpy",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "gerhardbrueckl.powerbi-vscode",
        "analysis-services.tmdl",
        "ms-mssql.data-workspace-vscode",
        "ms-mssql.mssql",
        "ms-mssql.sql-bindings-vscode",
        "ms-mssql.sql-database-projects-vscode",
        "github.codespaces",
        "github.remotehub",
        "ms-vscode.azure-repos",
        "ms-vscode.remote-repositories",
        "visualstudioexptteam.intellicode-api-usage-examples",
        "visualstudioexptteam.vscodeintellicode"
    ],
    "powerplatform.experimental.enableCanvasAppIntelliSense": true,
    "powerplatform.experimental.enableModelDrivenAppIntelliSense": true,
    "powerplatform.enablePortalIntelliSense": true,
    // Markdown performance optimization settings
    "markdown.validate.enabled": false,
    "markdown.experimental.validate.enabled": false,
    "markdown.preview.breaks": true,
    "markdown.preview.typographer": false,
    "typescript.suggest.autoImports": false,
    "markdown.preview.scrollEditorWithPreview": false,
    "markdown.preview.scrollPreviewWithEditor": false
}
