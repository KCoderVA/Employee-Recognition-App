{
  "appName": "Employee Recognition App",
  "schemaVersion": "1.0",
  "appReleaseVersion": "1.0.6",
  "lastUpdated": "2025-10-28",
  "features": {
    "enableDrafts": true,
    "enableBulkApproval": false,
    "enablePublicRecognitionBoard": true,
    "enableMilestoneNotifications": true
  },
  "validation": {
    "descriptionMinLength": 50,
    "descriptionMaxLength": 600,
    "justificationMinLength": 50,
    "justificationMaxLength": 600,
    "maxAttachments": 5,
    "maxAttachmentSizeMB": 10,
    "allowedFileTypes": ["pdf", "doc", "docx", "jpg", "jpeg", "png"]
  },
  "defaults": {
    "itemsPerPage": 20,
    "approvalDeadlineDays": 5,
    "level2ApprovalDeadlineDays": 3,
    "followUpDeadlineDays": 10,
    "draftExpirationDays": 30
  },
  "awardLevels": {
    "spotAward": { "minAmount": 25, "maxAmount": 100, "requiresLevel2Approval": false },
    "outstandingPerformance": { "minAmount": 100, "maxAmount": 250, "requiresLevel2Approval": true },
    "excellenceAward": { "minAmount": 250, "maxAmount": 500, "requiresLevel2Approval": true },
    "specialRecognition": { "minAmount": 0, "maxAmount": 0, "requiresLevel2Approval": false }
  },
  "metadata": {
    "source": "config/app-config.json",
    "managedBy": "Configuration Governance Team",
    "changeControl": "All changes require PR + CHANGELOG update",
    "hashAlgorithm": "SHA256"
  }
}
