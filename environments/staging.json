{
    "environment": {
        "name": "Staging",
        "type": "Production",
        "region": "unitedstates",
        "purpose": "Pre-production validation and user acceptance testing"
    },
    "powerPlatform": {
        "environmentUrl": "https://org-staging.crm.dynamics.com/",
        "dataverseDatabase": "org-staging-db",
        "defaultCurrency": "USD",
        "defaultLanguage": "en-US",
        "securityGroup": "EmployeeRecognition-Staging-Users"
    },
    "connections": {
        "sharepoint": {
            "siteUrl": "https://va.sharepoint.com/sites/EmployeeRecognition-Staging",
            "connectionName": "SharePoint-Staging",
            "authentication": "Office365"
        },
        "email": {
            "connectionName": "Office365Outlook-Staging",
            "fromAddress": "noreply-staging@va.gov",
            "authentication": "Office365"
        },
        "teams": {
            "connectionName": "MicrosoftTeams-Staging",
            "authentication": "Office365"
        },
        "approvals": {
            "connectionName": "Approvals-Staging",
            "authentication": "Office365"
        }
    },
    "dataConfiguration": {
        "testDataEnabled": false,
        "anonymizePII": false,
        "dataRefreshSchedule": "monthly",
        "retentionPeriod": "2 years",
        "backupFrequency": "daily"
    },
    "applicationSettings": {
        "debugMode": false,
        "telemetryLevel": "standard",
        "errorHandling": "user-friendly",
        "performanceLogging": true,
        "featureFlags": {
            "newAwardTypes": false,
            "bulkProcessing": false,
            "advancedReporting": true,
            "mobilePushNotifications": true
        }
    },
    "security": {
        "conditionalAccess": "staging-policy",
        "mfaRequired": true,
        "sessionTimeout": 240,
        "dataLossPrevention": "production-policy",
        "auditLogging": true
    },
    "integrations": {
        "activeDirectory": {
            "syncEnabled": true,
            "testUsersOnly": false,
            "groupFilters": [
                "Staging-Users",
                "UAT-Team",
                "Business-Stakeholders"
            ]
        },
        "monitoring": {
            "applicationInsights": "staging-app-insights",
            "logAnalytics": "staging-workspace",
            "alertsEnabled": true
        }
    },
    "deploymentSettings": {
        "autoDeployFromDev": false,
        "approvalRequired": true,
        "rollbackEnabled": true,
        "healthCheckEndpoint": "/api/health/staging",
        "deploymentWindow": "business-hours-only"
    },
    "testing": {
        "automatedTestsEnabled": true,
        "performanceTestingEnabled": true,
        "loadTestingEnabled": true,
        "testDataGeneration": false,
        "mockExternalServices": false
    },
    "compliance": {
        "dataClassification": "confidential",
        "retentionPolicy": "production-retention",
        "privacyLevel": "confidential",
        "complianceChecks": [
            "data-governance",
            "security-baseline",
            "privacy-compliance"
        ]
    },
    "resourceLimits": {
        "apiCallsPerDay": 100000,
        "powerAutomateRuns": 25000,
        "storageGB": 200,
        "maxConcurrentUsers": 500
    },
    "notifications": {
        "stakeholders": [
            "business-stakeholders@va.gov",
            "uat-team@va.gov",
            "production-support@va.gov"
        ],
        "alerts": {
            "deploymentIssues": true,
            "performanceDegradation": true,
            "securityIncidents": true,
            "testFailures": true,
            "capacityThresholds": true
        }
    },
    "userAcceptanceTesting": {
        "enabled": true,
        "testGroups": [
            "Business-Process-Owners",
            "End-User-Representatives",
            "Compliance-Officers",
            "IT-Support-Staff"
        ],
        "testScenarios": [
            "complete-award-submission-workflow",
            "manager-approval-process",
            "committee-review-process",
            "error-handling-scenarios",
            "mobile-device-testing"
        ],
        "signOffRequired": true,
        "minimumTestDuration": "2 weeks"
    },
    "performanceBaselines": {
        "responseTime": {
            "target": "< 2 seconds",
            "acceptable": "< 3 seconds",
            "unacceptable": "> 5 seconds"
        },
        "availability": {
            "target": "99.9%",
            "acceptable": "99.5%",
            "unacceptable": "< 99%"
        },
        "throughput": {
            "target": "2000 submissions/hour",
            "acceptable": "1500 submissions/hour",
            "unacceptable": "< 1000 submissions/hour"
        }
    }
}
