{
  "environment": "development",
  "displayName": "Employee Recognition - Development",
  "description": "Development environment for Employee Recognition app",
  "region": "unitedstates",
  "settings": {
    "powerApps": {
      "appId": "development-app-id",
      "version": "0.4.2-dev",
      "debugMode": true,
      "testDataEnabled": true
    },
    "powerAutomate": {
      "enableDebugMode": true,
      "retryPolicy": "exponential",
      "maxRetries": 3
    },
    "sharepoint": {
      "siteUrl": "https://va.sharepoint.com/sites/EmployeeRecognition-Dev",
      "lists": {
        "nominations": "Employee_Nominations_Dev",
        "users": "User_Profiles_Dev",
        "awards": "Award_Types_Dev"
      }
    },
    "security": {
      "dlpPolicy": "development-policy",
      "auditingEnabled": true,
      "encryptionRequired": true
    }
  },
  "connections": {
    "sharepoint": "connection-sharepoint-dev",
    "office365": "connection-office365-dev",
    "approvals": "connection-approvals-dev"
  },
  "variables": {
    "environment_name": "DEV",
    "debug_enabled": true,
    "test_mode": true
  }
}
