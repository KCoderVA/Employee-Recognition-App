{
    "environment": "production",
    "displayName": "Employee Recognition - Production",
    "description": "Production environment for Employee Recognition app",
    "region": "unitedstates",
    "settings": {
        "powerApps": {
            "appId": "production-app-id",
            "version": "0.4.2",
            "debugMode": false,
            "testDataEnabled": false
        },
        "powerAutomate": {
            "enableDebugMode": false,
            "retryPolicy": "exponential",
            "maxRetries": 5
        },
        "sharepoint": {
            "siteUrl": "https://va.sharepoint.com/sites/EmployeeRecognition",
            "lists": {
                "nominations": "Employee_Nominations",
                "users": "User_Profiles",
                "awards": "Award_Types"
            }
        },
        "security": {
            "dlpPolicy": "production-policy",
            "auditingEnabled": true,
            "encryptionRequired": true,
            "accessReviewRequired": true
        }
    },
    "connections": {
        "sharepoint": "connection-sharepoint-prod",
        "office365": "connection-office365-prod",
        "approvals": "connection-approvals-prod"
    },
    "variables": {
        "environment_name": "PROD",
        "debug_enabled": false,
        "test_mode": false
    }
}
